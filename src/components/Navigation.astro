---
const currentPath = Astro.url.pathname;

function isActive(path: string): boolean {
  if (path === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(path);
}
---

<nav class="nav" transition:persist>
  <div class="nav-container">
    <ul class="nav-links">
      <li>
        <a href="/leaderboard" class:list={{ 'nav-link': true, 'active': isActive('/leaderboard') }}>
          Leaderboard
        </a>
      </li>
      <li>
        <a href="/tournaments" class:list={{ 'nav-link': true, 'active': isActive('/tournaments') }}>
          Tournaments
        </a>
      </li>
      <li>
        <a href="/players" class:list={{ 'nav-link': true, 'active': isActive('/players') }}>
          Players
        </a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .nav {
    background: #ffffff;
    border-bottom: 1px solid #e5e7eb;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-links {
    display: inline-flex;
    background: #f3f4f6;
    border-radius: 9999px;
    padding: 0.25rem;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
  }

  .nav-link {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #6b7280;
    text-decoration: none;
    border-radius: 9999px;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .nav-link:hover:not(.disabled) {
    color: #374151;
  }

  .nav-link.active {
    background: #14b8a6;
    color: #ffffff;
    box-shadow: 0 2px 4px rgba(20, 184, 166, 0.2);
  }

  .nav-link.disabled {
    color: #d1d5db;
    cursor: not-allowed;
    pointer-events: none;
  }

  @media (max-width: 640px) {
    .nav-container {
      padding: 0.75rem;
    }

    .nav-link {
      padding: 0.4rem 1rem;
      font-size: 0.8125rem;
    }
  }
</style>

<script>
  function updateActiveLink() {
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll('.nav-link');
    
    links.forEach((link) => {
      if (!(link instanceof HTMLAnchorElement)) return;
      
      const href = link.getAttribute('href');
      if (!href) return;
      
      const isActive = href === '/'
        ? currentPath === '/'
        : currentPath.startsWith(href);
      
      if (isActive) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  }

  // Update on initial load
  updateActiveLink();

  // Update after view transitions
  document.addEventListener('astro:after-swap', updateActiveLink);
</script>
